<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import se.llbit.fx.LuxColorPicker?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
  <MenuButton fx:id="loadPreset" mnemonicParsing="false" text="Load preset" />
  <Canvas fx:id="canvas" height="72.0" width="424.0" />
  <BorderPane>
    <left>
      <HBox spacing="5.0" BorderPane.alignment="CENTER">
        <Button fx:id="prevBtn" mnemonicParsing="false" text="&lt;" />
        <Button fx:id="nextBtn" mnemonicParsing="false" text="&gt;" />
        <Button fx:id="removeBtn" mnemonicParsing="false" text="-" />
        <Button fx:id="addBtn" mnemonicParsing="false" text="+" />
      </HBox>
    </left>
    <right>
      <HBox spacing="10.0" BorderPane.alignment="CENTER">
        <Button fx:id="importBtn" mnemonicParsing="false" text="Import" />
        <Button fx:id="exportBtn" mnemonicParsing="false" text="Export" />
      </HBox>
    </right>
    <center>
      <LuxColorPicker fx:id="colorPicker" BorderPane.alignment="CENTER" />
    </center>
  </BorderPane>
</fx:root>
